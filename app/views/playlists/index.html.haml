.panel.panel-default
  .panel-heading
    %h3.panel-title.h3-buttons.pull-left
      Playlists
    = link_to new_playlist_path, class: 'btn btn-primary pull-right' do
      %i.fa.fa-plus
      New playlist
    .clearfix
  .panel-body
    %table.table.table-condensed
      %thead
        %tr
          %th Name
          %th Number of tracks
          %th Actions
      %tbody
        - @playlists.each do |playlist|
          %tr
            %td
              = playlist.name
            %td
              = playlist.tracks.count
            %td
              %div.btn-group{role: "group"}
                = link_to playlist, class: "btn btn-primary" do
                  %span.fa.fa-eye
                = link_to edit_playlist_path(playlist), class: "btn btn-primary" do
                  %span.fa.fa-pencil-square-o
                = link_to playlist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do
                  %span.fa.fa-times
