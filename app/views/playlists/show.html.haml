.panel.panel-default
  .panel-heading
    %h3.panel-title.h3-buttons.pull-left
      =@playlist.name
    = link_to edit_playlist_path(@playlist), class: 'btn btn-primary pull-right' do
      %i.fa.fa-pencil-square-o
      Edit playlist
    = link_to @playlist, method: :delete, class: 'btn btn-danger pull-right', data: { confirm: 'Are you sure?' } do
      %i.fa.fa-times
      Delete playlist
    .clearfix
  .panel-body
    %table.table.table-condensed
      %thead
        %tr
          %th Track name
      %tbody
        - @playlist.tracks.each do |track|
          %tr
            %td
              = track.name
